<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zplay.playable.playableadmobdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity
            android:name="com.yumiad.playable.admobsample.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yumiad.playable.admobsample.BannerActivity"
            android:label="@string/title_activity_banner"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yumiad.playable.admobsample.InterstitialActivity"
            android:label="@string/title_activity_interstitial"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yumiad.playable.admobsample.RewardedVideoActivity"
            android:label="@string/title_activity_rewarded_video"
            android:screenOrientation="portrait" />
    </application>

</manifest>